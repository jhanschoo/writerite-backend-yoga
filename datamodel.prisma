type PUser {
  id: ID! @unique
  email: String! @unique
  passwordHash: String
  googleId: String
  facebookId: String
  decks: [PDeck!]!
  defaultRoles: [String!]!
  ownerOfRoom: [PRoom!]! @relation(name: "PUserOwningPRooms")
  occupyingRoom: [PRoom!]! @relation(name: "PUsersOccupyingPRooms")
}

